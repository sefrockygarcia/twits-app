<h2 class="center-align">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate", required: true %>
      <%= f.label :email %>
    </div>

    <div class="input-field col s12">
      <%= f.password_field :password, autocomplete: "current-password", class: "validate", required: true %>
      <%= f.label :password %>
    </div>

    <div class="input-field col s12">
      <%= f.submit "Log in", class: "btn waves-effect waves-light" %>
    </div>
  </div>
<% end %>

<%= render "users/shared/links" %>
